@model List<Patient>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    <i class="fas fa-caret-square-left"></i>
    Back to Home page
</a>

<br /> <br />

@if(Model.Count() < 1)
{
    <div class="alert alert-info">
        No available schedule at this time
    </div>
}
else
{
    <table id="tblPatient" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Vaccination Dates</th>
                <th>Vaccine</th>
                <th>Location</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*Replace with the new stuff from Medical's side here*@
                    <td>some date ye</td>
                    <td>some brand yo</td>
                    <td>some place yah</td>
                    <td>
                        <a asp-controller="Patient" asp-action="Bookslot" asp-route-id="@item.PatientID"
                   class="btn btn-info btn-sm">
                            <i class="fas fa-edit"></i>
                            Book slot
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}