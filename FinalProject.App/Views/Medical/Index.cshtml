@model List<MedicalVM>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    <i class="fas fa-caret-square-left"></i>
    Back to Home page
</a>

<a asp-controller="Medical" asp-action="Add" class="btn btn-success">
    <i class="fas fa-caret-square-left"></i>
    Create a new Schedule
</a>


<br /> <br />

@if(Model.Count() < 1)
{
    <div class="alert alert-info">
        No Schedule Records Found.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>I.D.</th>
                <th>Vaccination Dates</th>
                <th>Vaccine</th>
                <th>Location</th>
                <th>Slots</th>
                <th>Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*Replace with the new stuff from Medical's side here*@
                    <td>@item.Id</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Vaccine</td>
                     <td>@item.Location</td>
                     <td>@item.Slots</td>
                     <td>@item.Time.ToShortTimeString()</td>
                    <td>
                        <a asp-controller="Medical" asp-action="Edit" asp-route-id="@item.Id"
                   class="btn btn-info btn-sm">
                            <i class="fas fa-edit"></i>
                            Edit Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

